@{
    Layout = null;
    ViewBag.Title = !String.IsNullOrEmpty(ViewBag.Title) 
        ? ViewBag.Title 
        : "Учебно методический комплекс";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/assets/css/materialize.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <!-- Dropdown Structure -->
        <ul id="dropdown1" class="dropdown-content" style="widows:175px!important;">
            <li>@Html.ActionLink("Курсы", "Index", "Course")</li>
            <li>@Html.ActionLink("Отделения", "Index", "Branch")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("Специальности", "Index", "Specialty")</li>
            <li>@Html.ActionLink("Специализации", "Index", "Set")</li>



        </ul>
        <nav>
            <div class="nav-wrapper">
                <div class="col s12">
                    <a href="#!" class="brand-logo">&nbspУМК</a>
                    <ul class="right side-nav">
                        <!-- Dropdown Trigger -->
                        <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Общее<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
                        <li>@Html.ActionLink("Расписание", "Index", "Container")</li>
                        <li>@Html.ActionLink("Группы", "Index", "Group")</li>
                        <li>@Html.ActionLink("Занятий", "Index", "Lesson")</li>
                        <li>@Html.ActionLink("Типы Занятий", "Index", "LessonType")</li>
                        <li>@Html.ActionLink("Ученики", "Index", "Student")</li>
                        <li>@Html.ActionLink("Предметы", "Index", "Subject")</li>
                        <li>@Html.ActionLink("Преподователи", "Index", "Teacher")</li>
                    </ul>
                </div>
            </div>
        </nav>







       
            @RenderBody()
        

        <!--Import jQuery before materialize.js-->
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="~/assets/js/materialize.js"></script>

        <script>
            $(".dropdown-button").dropdown({ hover: false, width: 175 });
        </script>



    </div>
</body>
</html>
